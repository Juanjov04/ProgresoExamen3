<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProgresoExamen3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProgresoExamen3"
    Shell.FlyoutBehavior="Disabled"
    Title="ProgresoExamen3">

    <TabBar>
        <Tab
            Title="Buscar Paises"
            Icon="flag.png">
            <ShellContent
                Title="Paises"
                ContentTemplate="{DataTemplate local:Paises}" />
        </Tab>
        
        <Tab
            Title="Informacion de los paises"
            Icon="home.png">
            <ShellContent
                Title="Inicio"
                ContentTemplate="{DataTemplate local:Buscar}" />
        </Tab>
        
    </TabBar>
</Shell>
